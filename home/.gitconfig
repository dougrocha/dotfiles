[user]
    name = Douglas Rocha
    email = 79188161+dougrocha@users.noreply.github.com
    signingkey = ~/.ssh/id_ed25519_github
[pull]
    ff = only
	rebase = true
[commit]
    gpgsign = true
[gpg]
    format = ssh
[tag]
    gpgsign = true
[gpg "ssh"]
    allowedSignersFile = ~/.ssh/allowed_signers
[column]
	ui = auto
[branch]
	sort = -committerdate
[init]
	defaultBranch = main
[diff]
	algorithm = histogram
	mnemonicPrefix = true
	renames = true
[push]
	default = simple
	autoSetupRemote = true
[fetch]
	prune = true
[maintenance]
	repo = /Users/douglasrocha/dev/dotfiles
[rerere]
	enabled = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[core]
	editor = nvim

#
# Thank you https://github.com/mathiasbynens/dotfiles/blob/main/brew.sh
#

#!/bin/bash

# Install command-line tools using Homebrew.

# Make sure we’re using the latest Homebrew.
brew update

# Upgrade any already-installed formulae.
brew upgrade

# Save Homebrew’s installed location.
BREW_PREFIX=$(brew --prefix)

# Esentials
brew install alfred
brew install discord
brew install firefox-developer-edition
brew install notion
brew install obsidian
brew install visual-studio-code

# Install Shell
brew install iterm2
brew install fish
brew install starship
brew install grep

# Switch to using brew-installed fish as default shell
if ! fgrep -q "${BREW_PREFIX}/bin/fish" /etc/shells; then
    echo "${BREW_PREFIX}/bin/fish" | sudo tee -a /etc/shells
    chsh -s "${BREW_PREFIX}/bin/fish"
fi

brew install openssh
brew install ripgrep
brew install docker

# Faster node manager
brew install fnm

# Neovim
brew install lua
brew install neovim

# git
brew install git
brew install git-kraken
brew install git-lfs
brew install gh

brew install deno
brew install rust

# Planetscale
brew install planetscale/tap/pscale
brew install mysql-client

# Fonts
brew tap homebrew/casks
brew tap homebrew/cask-fonts
brew install --cask font-caskaydia-cove-nerd-font

# Remove outdated versions from the cellar.
brew cleanup
